#!/usr/bin/env bash
#This script will manage a process

PID_file="/var/run/my_process.pid"
process="./manage_my_process"

#Creating the start function
start() {
	$process &
	echo $! > "$PID_file"
	echo "manage_my_process started"
}

#Creating the stop function
stop() {
	if [ -f "$PID_file" ]; then
		kill "$(cat "$PID_file")"
		rm -f "$PID_file"
		echo "manage_my_process stopped"

	else 
		echo "manage_my_process is not running"
	fi
}

#Creating the restart function to restart the process
restart() {
	start
	stop
	echo "manage_my_process restarted"
}

case "$1" in 
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		echo "Use: manage_my_process {start|stop|restart}"
		exit 1
		;;
esac
